<?xml version="1.0" encoding="UTF-8"?>

<?import com.fligneul.srm.ui.node.attendance.AttendanceLicenseeSelectorNode?>
<?import com.fligneul.srm.ui.node.attendance.AttendanceLicenseeSimpleNode?>
<?import com.fligneul.srm.ui.node.attendance.AttendanceTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root prefHeight="500.0" prefWidth="800.0" type="StackPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <HBox>
        <VBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="5.0"/>
            </HBox.margin>
            <AttendanceLicenseeSelectorNode/>
            <Separator prefWidth="200.0"/>
            <VBox fx:id="licenseeDetailContainer" alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS"
                  visible="false" managed="false">

                <AttendanceLicenseeSimpleNode/>
                <Separator prefWidth="200.0"/>

                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                    <GridPane hgap="10" vgap="10" maxWidth="300">
                        <Label text="Pas de tir" GridPane.columnIndex="0" GridPane.rowIndex="0"
                               GridPane.halignment="CENTER"/>
                        <ComboBox fx:id="firingPointComboBox" prefWidth="150.0" GridPane.columnIndex="0"
                                  GridPane.rowIndex="1"/>
                        <Label text="Poste de tir" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               GridPane.halignment="CENTER"/>
                        <ComboBox fx:id="firingPostComboBox" disable="true" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                    </GridPane>

                    <HBox alignment="BOTTOM_CENTER" spacing="10.0">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                        <Button fx:id="saveButton" disable="true" alignment="CENTER" contentDisplay="CENTER"
                                mnemonicParsing="false"
                                onAction="#saveAttendance" text="Enregistrer"/>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#clearAttendance" text="Annuler"/>

                    </HBox>
                </VBox>
            </VBox>

        </VBox>
        <Separator orientation="VERTICAL" prefHeight="200.0"/>
        <VBox alignment="CENTER" spacing="5">
            <Label fx:id="attendanceListTitle" text="Date" VBox.vgrow="NEVER"/>
            <AttendanceTableView fx:id="attendanceListView" prefWidth="500.0" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
</fx:root>
