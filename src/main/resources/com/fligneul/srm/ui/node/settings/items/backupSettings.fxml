<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<fx:root type="StackPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <VBox alignment="TOP_CENTER" spacing="10.0">
        <Label text="Sauvegarde &amp; Restauration">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>
        <HBox>
            <Label text="Sauvegarde">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </HBox>
        <HBox>
            <Button text="Sauvegarder maintenant" onAction="#backup"/>
        </HBox>
        <HBox>
            <Label text="Restauration">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </HBox>
        <HBox>
            <Button text="Restaurer" onAction="#restore"/>
        </HBox>
    </VBox>
</fx:root>
